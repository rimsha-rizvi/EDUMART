@model EduMartFYP1.Quota

@{
    ViewBag.Title = "Add Quota";
}

<!-- login -->
<div class="login-w3ls py-5">
    <div class="container py-xl-5 py-lg-3">
        <h3 class="title text-capitalize font-weight-light text-dark text-center mb-5">
            Add
            <span class="font-weight-bold">Quota</span>
        </h3>
        <!-- content -->
        <div class="sub-main-w3 pt-md-4">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-style-agile form-group">
                    <label>
                        Quota Name
                        <i class="fas fa-user"></i>
                    </label>
                    @Html.EditorFor(model => model.QuotaName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.QuotaName, "", new { @class = "text-danger" })
                </div>
            }
        </div>
        <!-- //content -->
    </div>
</div>
<!-- //login -->

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
